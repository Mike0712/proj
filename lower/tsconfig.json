{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "noEmitOnError": true,
    "jsx": "react-jsx",
    "baseUrl": "./assets",
    "paths": {
      "api": ["api/*"],
      "components": ["components/*"],
      "hooks": ["hooks/*"],
      "layouts": ["layouts/*"],
      "locales": ["locales/*"],
      "pages": ["pages/*"],
      "routes": ["routes/*"],
      "store/*": ["store/*"],
      "styles/*": ["styles/*"]
    }
  },
  "include": ["assets"]
}
